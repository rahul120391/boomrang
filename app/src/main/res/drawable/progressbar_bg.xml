<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="20dp" />
            <solid
                android:color="@color/remaining_indi_color"
                ></solid>
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="20dp" />
                <solid
                    android:color="@color/consume_indi_color"
                    ></solid>
            </shape>
        </clip>
    </item>
</layer-list>